# ==============================================================================
# GIU EV Charging Infrastructure - Environment Configuration
# ==============================================================================

# Application Settings
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/giu_ev_db?schema=public"

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_EXPIRES_IN=24h
API_RATE_LIMIT=100

# Email Service (SendGrid)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
EMAIL_FROM_ADDRESS=noreply@giuev.com
SALES_TEAM_EMAILS=sales@giuev.com,team@giuev.com

# Meeting Platform Integration
# Zoom Configuration
ZOOM_API_KEY=your-zoom-api-key
ZOOM_API_SECRET=your-zoom-api-secret

# Microsoft Teams Configuration (Alternative)
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your-teams-webhook

# Monitoring & Logging
LOGGING_ENDPOINT=https://your-logging-service.com/api/logs
METRICS_ENDPOINT=https://your-metrics-service.com/api/metrics
ERROR_TRACKING_DSN=https://your-error-tracking-dsn

# External API Keys
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
STRIPE_SECRET_KEY=sk_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_your_stripe_publishable_key

# File Storage (AWS S3 or similar)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=giu-ev-assets

# Redis (for caching and sessions in production)
REDIS_URL=redis://localhost:6379

# Performance & Scaling
MAX_REQUEST_SIZE=10mb
ENABLE_COMPRESSION=true
CACHE_TTL=3600

# Development Only (Remove in production)
# DISABLE_SSL_VERIFY=true
# DEBUG_MODE=true 